<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <a href="/Home/Index">
            <img src="~/Content/Images/logo.jpg">
        </a>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Magic", "Index", "Magic")</li>
                    <li>@Html.ActionLink("Yu-Gi-Oh!", "Index", "Yugioh")</li>
                    <li>@Html.ActionLink("Pokemon", "Index", "Pokemon")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <ul class="nav navbar-nav footer-navbar">
                <li>@Html.ActionLink("Magic", "Index", "Magic")</li>
                <li>@Html.ActionLink("Yu-Gi-Oh!", "Index", "Yugioh")</li>
                <li>@Html.ActionLink("Pokemon", "Index", "Pokemon")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="copyright">&copy; @DateTime.Now.Year - Card Store</li>
            </ul>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
